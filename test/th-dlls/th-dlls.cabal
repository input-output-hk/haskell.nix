name:                th-dlls
version:             0.1.0.0
license:             PublicDomain
author:              Hamish Mackenzie
maintainer:          Hamish.K.Mackenzie@gmail.com
build-type:          Simple

library
  build-depends:       base
                     , HsOpenSSL
                     , libsodium
                     , template-haskell
                     , text
                     , double-conversion
